---
// Lava Lamp Page
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <canvas id="lava-lamp-canvas"></canvas>

  <script>
    import { initLavaLamp } from '../scripts/lava-lamp.js';
    
    // Wait for DOM to be ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initLavaLamp);
    } else {
      initLavaLamp();
    }
  </script>
</BaseLayout>

<style>
  html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: #000;
  }

  #lava-lamp-canvas {
    display: block;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    /* Cursor visible de forma normal */
  }
</style>

